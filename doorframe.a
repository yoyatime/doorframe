
	processor 6502
        include "vcs.h"
        include "macro.h"
        include "xmacro.h"

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Constants
TitleScreen 	equ #$00
GameScreen 	equ #$01

; Variables segment

        	seg.u Variables
		org $80


Mode		ds 1		;0 = Title Screen
			;1 = Game
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Code segment

	seg Code
        org $f000

Start
	CLEAN_START
        lda TitleScreen
        sta Mode
        
NextFrame
        lsr SWCHB	; test Game Reset switch
        bcc Start	; reset?
; 1 + 3 lines of VSYNC
	VERTICAL_SYNC
; 37 lines of underscan
	TIMER_SETUP 37
        TIMER_WAIT
        
; 192 lines of frame
	ldx #$c0
        
        
        cmp Mode	;A=0, 
        bne DrawGameScreen
        
DrawTitleScreen
	stx COLUBK	;rainbow lines
        
        sta WSYNC
        
	dex        
        cpx #0
        bne DrawTitleScreen
        jmp Overscan
        
DrawGameScreen
	lda #$62
        sta COLUBK
        sta WSYNC
        dex
        cpx #0
        bne DrawGameScreen

; 29 lines of overscan
Overscan
        stx COLUBK	;set over/underscan to black
	TIMER_SETUP 29
        TIMER_WAIT
; total = 262 lines, go to next frame
        jmp NextFrame
        


